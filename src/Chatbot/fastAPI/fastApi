from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from pydantic import BaseModel

app = FastAPI()

# allow requests from every IP
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# class for Request Data
class RequestData(BaseModel):
    userMessage: str
    prePrompt: str

@app.post("/mockAPI")
async def mock_api(request_data: RequestData):
    user_message = request_data.userMessage
    pre_prompt = request_data.prePrompt

    # Process the message and generate the appropriate response
    # User input is not processed yet but can be processes later in here
    chatbot_message = "The Wintersemester at HHN starts at 01. September 2023"
    return {"botMessage": chatbot_message}

if __name__ == "__main__":
    import uvicorn
    uvicorn.run(app, host="localhost", port=8000)